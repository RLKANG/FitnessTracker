<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rlkang.richard.fitnesstracker.SelectionPanel">

    <TextView
        android:id="@+id/display_part"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/lin1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/display_part"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/exercise1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exercise1"
            android:textSize="15sp"
            android:layout_marginEnd="10dp"/>

        <EditText
            android:id="@+id/text1"
            android:labelFor="@+id/text1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/select"
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            android:focusable="false"
            android:onClick="Add"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin1"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/exercise2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exercise2"
            android:textSize="15sp"
            android:layout_marginEnd="10dp"/>

        <EditText
            android:id="@+id/text2"
            android:labelFor="@+id/text2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/select"
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            android:focusable="false"
            android:onClick="Add"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin2"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/exercise3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exercise3"
            android:textSize="15sp"
            android:layout_marginEnd="10dp"/>

        <EditText
            android:id="@+id/text3"
            android:labelFor="@+id/text2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/select"
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            android:focusable="false"
            android:onClick="Add"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin3"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/exercise4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exercise4"
            android:textSize="15sp"
            android:layout_marginEnd="10dp"/>

        <EditText
            android:id="@+id/text4"
            android:labelFor="@+id/text4"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/select"
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            android:focusable="false"
            android:onClick="Add"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin4"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/exercise5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exercise5"
            android:textSize="15sp"
            android:layout_marginEnd="10dp"/>

        <EditText
            android:id="@+id/text5"
            android:labelFor="@+id/text5"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/select"
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            android:focusable="false"
            android:onClick="Add"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin5"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/exercise6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exercise6"
            android:textSize="15sp"
            android:layout_marginEnd="10dp"/>

        <EditText
            android:id="@+id/text6"
            android:labelFor="@+id/text6"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/select"
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            android:focusable="false"
            android:onClick="Add"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="@string/select_sets"
        android:onClick="Select_Sets"/>

</RelativeLayout>
